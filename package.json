{
  "name": "ngx-text-editor",
  "version": "1.0.0",
  "description": "WYSIWYG Editor for Angular 2+ Applications",
  "license": "MIT",
  "scripts": {
    "build": "ng-packagr -p package.json && mkdir dist/styles && cp -r src/assets/styles/* dist/styles/",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n ionic4-auto-complete -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "publish": "npm publish dist",
    "test": "tsc && karma start"
  },
  "ngPackage": {
    "lib": {
      "cssUrl": "inline",
      "entryFile": "src/index.ts",
      "styleIncludePaths": [
        "./src/scss"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrquick17/ngx-text-editor.git"
  },
  "author": {
    "name": "Jeremy Quick",
    "email": "me@jrquick.com"
  },
  "keywords": [
    "angular",
    "angular-editor",
    "angular-wysiwyg-editor",
    "wysiwyg-editor",
    "ngx-editor",
    "ngx-editor2",
    "ngx-text-editor"
  ],
  "bugs": {
    "url": "https://github.com/jrquick17/ngx-text-editor/issues"
  },
  "homepage": "https://github.com/jrquick17/ngx-text-editor",
  "peerDependencies": {
    "@angular/common": ">=2.0.0",
    "@angular/core": ">=2.0.0",
    "@angular/forms": ">=2.0.0",
    "font-awesome": "^4.7.0",
    "ngx-bootstrap": "^3.0.1",
    "rxjs": "^6.2.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular/animations": "^7.2.15",
    "@angular/cli": "^7.3.9",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/forms": "^7.2.15",
    "@angular/http": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.2.15",
    "@compodoc/compodoc": "^1.1.10",
    "@types/jasmine": "^2.8.16",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^8.10.53",
    "bootstrap": "^4.3.1",
    "chalk": "^2.4.2",
    "codelyzer": "^4.5.0",
    "core-js": "^2.6.9",
    "font-awesome": "^4.7.0",
    "gh-pages": "^2.1.1",
    "husky": "^1.3.1",
    "inquirer": "^6.5.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^4.7.1",
    "ngx-bootstrap": "^3.3.0",
    "protractor": "^5.4.2",
    "rxjs": "^6.5.3",
    "ts-node": "^7.0.0",
    "tsickle": "^0.34.3",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2",
    "zone.js": "^0.8.29"
  },
  "$schema": "./node_modules/ng-packagr/package.schema.json"
}
