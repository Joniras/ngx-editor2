{
  "name": "ngx-text-editor",
  "version": "2.1.0",
  "description": "WYSIWYG Editor for Angular 2+",
  "license": "MIT",
  "scripts": {
    "build": "ng-packagr -p package.json && mkdir dist/styles && cp -r src/assets/styles/* dist/styles/",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n ngx-text-editor -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "publish": "npm publish dist",
    "test": "tsc && karma start"
  },
  "ngPackage": {
    "lib": {
      "cssUrl": "inline",
      "entryFile": "src/public_api.ts",
      "styleIncludePaths": [
        "./src/scss"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrquick17/ngx-text-editor.git"
  },
  "author": {
    "name": "Jeremy Quick",
    "email": "me@jrquick.com"
  },
  "keywords": [
    "angular",
    "angular-editor",
    "angular-wysiwyg-editor",
    "wysiwyg-editor",
    "ngx-editor",
    "ngx-editor2",
    "ngx-text-editor"
  ],
  "bugs": {
    "url": "https://github.com/jrquick17/ngx-text-editor/issues"
  },
  "homepage": "https://github.com/jrquick17/ngx-text-editor",
  "peerDependencies": {
    "@angular/common": ">=8.0.0",
    "@angular/core": ">=8.0.0",
    "@angular/forms": ">=8.0.0",
    "font-awesome": "^4.7.0",
    "ngx-bootstrap": "^5.1.1",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.3",
    "@angular/animations": "^8.2.5",
    "@angular/cli": "^8.3.3",
    "@angular/common": "^8.2.5",
    "@angular/compiler": "^8.2.5",
    "@angular/compiler-cli": "^8.2.5",
    "@angular/core": "^8.2.5",
    "@angular/forms": "^8.2.5",
    "@angular/language-service": "^8.2.5",
    "@angular/platform-browser": "^8.2.5",
    "@angular/platform-browser-dynamic": "^8.2.5",
    "@angular/router": "^8.2.5",
    "@compodoc/compodoc": "^1.1.10",
    "@types/jasmine": "^3.4.0",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^12.7.4",
    "bootstrap": "^4.3.1",
    "chalk": "^2.4.2",
    "codelyzer": "^5.1.0",
    "core-js": "^3.2.1",
    "font-awesome": "^4.7.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.5",
    "inquirer": "^7.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jquery": "^3.4.1",
    "karma": "~4.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^5.5.0",
    "ngx-bootstrap": "^5.1.1",
    "popper": "^1.0.1",
    "popper.js": "^1.15.0",
    "protractor": "^5.4.2",
    "rxjs": "^6.5.3",
    "ts-node": "^8.3.0",
    "tsickle": "^0.37.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3",
    "zone.js": "^0.9.1"
  },
  "$schema": "./node_modules/ng-packagr/package.schema.json"
}
